{
  "type": "commonjs",
  "name": "@heroku/heroku-cli-util",
  "version": "9.0.0",
  "description": "Set of helpful CLI utilities",
  "author": "Heroku",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.13",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "@types/sinon": "^17.0.4",
    "chai": "^4.4.1",
    "eslint": "8.x",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "sinon": "^18.0.1",
    "strip-ansi": "^6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@oclif/core": "^2.16.0"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "file": [
      "src/test-helpers/stub-output.ts"
    ],
    "watch-extensions": "ts",
    "recursive": true,
    "reporter": "spec",
    "timeout": 360000
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "prepare": "npm run clean && npm run build",
    "test": "nyc mocha  --forbid-only \"test/**/*.test.ts\""
  }
}
