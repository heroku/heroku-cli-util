{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDirs": [ "./src" ],
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [ "./node_modules/@types" ],
  },
  "include": [
    "./src/**/*"
  ]
}
